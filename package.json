{
  "version": "1.0.0",
  "license": "MIT",
  "main": "index.html",
  "scripts": {
    "build": "yarn cache clean && rm -rf build && yarn build:parcel",
    "build:parcel": "parcel build src/pages/Home.pug -d build --public-url ./ --out-file index.html",
    "csscomb": "csscomb src -c .csscomb.json",
    "lint:fix": "prettier --write",
    "start": "rm -rf dist && parcel src/pages/Home.pug --port 3000 --open "
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "yarn lint:fix"
    ],
    "*.pug": [
      "yarn lint:fix"
    ],
    "*.{css,scss}": [
      "csscomb --tty-mode --"
    ],
    "package.json": [
      "sort-package-json"
    ]
  },
  "dependencies": {
    "parsel": "^0.3.0",
    "smooth-scroll": "^16.1.1",
    "tiny-slider": "^2.9.3"
  },
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@babel/parser": "^7.11.5",
    "@babel/preset-env": "^7.11.5",
    "@babel/preset-react": "^7.10.4",
    "@prettier/plugin-pug": "^1.5.1",
    "autoprefixer": "^9.8.6",
    "babel-eslint": "^10.1.0",
    "css-loader": "^4.2.2",
    "csscomb": "^4.3.0",
    "cssnano": "^4.1.10",
    "husky": "^4.2.5",
    "lint-staged": "^10.3.0",
    "parcel-bundler": "^1.12.4",
    "postcss-modules": "^3.2.2",
    "prettier": "^2.1.1",
    "pug": "^3.0.0",
    "sass": "^1.26.10",
    "scrollreveal": "^4.0.7",
    "sort-package-json": "^1.44.0",
    "style-loader": "^1.2.1"
  }
}
