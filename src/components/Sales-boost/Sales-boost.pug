section.sales-boost
  .sales-boost__container.container
    - let salesBoostTitle = 'B2B Lead Generation boost';
      h2.sales-boost__title.title.headline #{salesBoostTitle}
    .sales-boost__box
      -
        let salesBoostContent = [
            {
                imgPath: './../components/Sales-boost/images/sales-boost-1.svg',
                altImg: ''
            },
            {
                imgPath: './../components/Sales-boost/images/sales-boost-2.svg',
                altImg: ''
            },
            {
                imgPath: './../components/Sales-boost/images/cold-calling.svg',
                altImg: '',
                customClass: "sales-boost__cold-calling"
            },
            {
                imgPath: './../components/Sales-boost/images/sales-boost-4.svg',
                altImg: ''
            }
        ]
      each sourceBoostContent in salesBoostContent
        .sales-boost__source
          img.sales-boost__source-image(
            src=sourceBoostContent.imgPath,
            alt=sourceBoostContent.altImg,
            class=sourceBoostContent.customClass
          )
